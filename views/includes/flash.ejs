<!-- Flash Messages Section -->
<div>

  <!-- Success Flash Message -->
  <% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 flashMsg" role="alert" id="autoDismissAlert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <!-- Error Flash Message -->
  <% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 flashMsg" role="alert" id="autoDismissAlert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>
